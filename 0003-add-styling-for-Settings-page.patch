 create mode 100644 src/styles/settings.css

diff --git a/src/styles/settings.css b/src/styles/settings.css
new file mode 100644
index 0000000..9699b45
--- /dev/null
+++ b/src/styles/settings.css
@@ -0,0 +1,66 @@
+.wrapper {
+  display: flex;
+  height: calc(100vh - 60px); /* Assuming the Navbar height is 60px */
+}
+
+.sidebar-container {
+  width: 255px;
+  height: 100%;
+  background-color: #ffffdd;
+}
+
+.content-container {
+  flex-grow: 1;
+  background-color: #fffff1;
+  padding-left: 15px;
+}
+
+.content {
+  display: flex;
+  flex-direction: column;
+  align-items: center;
+  padding: 15px;
+  gap: 15px;
+}
+
+.logo {
+  display: flex;
+  align-items: center;
+  padding: 5px;
+  margin-left: 5px;
+}
+
+.logo img {
+  width: 50px;
+  height: 50px;
+  margin-right: 10px;
+}
+
+.sidebar-list {
+  display: flex;
+  flex-direction: column;
+  gap: 25px;
+}
+
+.sidebar-item {
+  display: flex;
+  align-items: center;
+  margin-left: 30px;
+  padding: 3px;
+  transition: 0.3s ease-in-out;
+  color: black;
+}
+
+.sidebar-item:hover {
+  background-color: #cff2f2;
+  color: black;
+}
+
+h1 {
+  font-size: 31px;
+}
+
+h3 {
+  margin-left: 15px;
+  padding: 10px;
+}
